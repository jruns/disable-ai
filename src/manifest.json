{
  "name": "Disable AI",
  "version": "1.2",
  "manifest_version": 3,
  "author": "jruns",
  "description": "Disable AI will disable AI features on various sites and search engines so that you consume less energy and water resources.",
  "browser_specific_settings": {
    "gecko": {
      "id": "disable-ai@impactfulgroup.com"
    }
  },  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "redirect_rules",
        "enabled": true,
        "path": "rules/redirect_rules.json"
      },
      {
        "id": "autocomplete_rules",
        "enabled": true,
        "path": "rules/autocomplete_rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [ "https://www.google.com/*" ],
      "js": [ "scripts/google_search.js" ]
    },
    {
      "matches": [ "https://www.bing.com/*", "https://bing.com/*" ],
      "js": [ "scripts/bing_search.js" ]
    },
    {
      "matches": [ "https://search.brave.com/*" ],
      "js": [ "scripts/brave_search.js" ]
    }
  ],
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Disable AI"
  }
}
